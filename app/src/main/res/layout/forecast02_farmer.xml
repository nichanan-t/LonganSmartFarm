                        android:text="วังเย็น"
                        android:textColor="#9E8026"
                        android:textSize="18sp" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableRow
                    android:layout_width="match_parent"
